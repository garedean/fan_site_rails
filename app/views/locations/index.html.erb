<p class='text-center lead section-title'>Best Beaches Around the World</p>

<div class="form-wrapper">
  <%= form_for @location do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
</div>

<ul class="beach-list">
  <% @locations.each do |location| %>
  <li><%= link_to location.name, location_path(location) %></li>
  <% end %>
</ul>
